{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "price": {
      "type": "decimal"
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "USD",
        "UZS"
      ]
    },
    "shortDescription": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isActive": {
      "type": "boolean"
    },
    "collection": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::collection.collection",
      "inversedBy": "products"
    },
    "old_price": {
      "type": "decimal"
    },
    "sku": {
      "type": "string"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "attributes": {
      "type": "json"
    },
    "in_stock": {
      "type": "boolean"
    },
    "is_featured": {
      "type": "boolean"
    },
    "seo": {
      "type": "component",
      "component": "seo.shared-seo",
      "repeatable": false
    },
    "sizes": {
      "type": "enumeration",
      "enum": [
        "XS",
        "S",
        "M",
        "L",
        "XL",
        "ONE_SIZE"
      ]
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "inversedBy": "complete_looks"
    },
    "complete_looks": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "products"
    },
    "banners": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::banner.banner",
      "mappedBy": "products"
    },
    "variants": {
      "type": "component",
      "component": "product.product-variant",
      "repeatable": true
    },
    "care": {
      "type": "text"
    },
    "material": {
      "type": "text"
    }
  }
}
